<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84CCD5"
    android:orientation="vertical"
    tools:context=".fragment.Fragment3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#00EDAAC1"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:src="@drawable/touxiang2"
            android:translationY="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:translationY="5dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="成为好再来点餐会员"
            android:translationY="5dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="享受更多的会员权益"
            android:translationY="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#84CCD5"
                android:text="立即授权"
                android:translationX="30dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:src="@drawable/saoma"
                android:translationX="30dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="我的资产"
        android:textColor="#403F3D"
        android:textSize="16sp"
        android:translationY="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:translationY="10dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="22dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="3dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12.00" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:translationY="10dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="点吧券" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分商城" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" 余额" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" 礼品卡" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="我的服务"
        android:textColor="#403F3D"
        android:textSize="16sp"
        android:translationY="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:translationY="20dp">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/baidu" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:src="@drawable/kefu" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:src="@drawable/tianqi" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:src="@drawable/weizhi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:translationY="20dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的度娘" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的客服" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的天气" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的位置" />
    </LinearLayout>

</LinearLayout>